@model Senparc.Areas.Admin.Models.VD.Account_EditVD
@{
    ViewData["Title"] = $"{(Model.IsEdit ? "编辑" : "新增")}用户";
}

@section breadcrumbs{
    <li>
        <a asp-action="Index" asp-controller="Account" class=" link-unstyled">用户列表</a>
    </li>
    <li>
        @ViewData["Title"]
    </li>
}
<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal" method="post" data-parsley-validate="">
            <input type="hidden" asp-for="Id" />
            <div class="panel">
                <div class="panel-body">
                    <input type="hidden" asp-for="Id">
                    <div class="form-group">
                        <label class="col-sm-1 control-label">昵称</label>
                        <div class="col-sm-4 pt-sm">
                            <span>@Model.NickName</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-1 control-label">用户名</label>
                        <div class="col-sm-4 pt-sm">
                            <span>@Model.UserName</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-1 control-label">真实姓名</label>
                        <div class="col-sm-4 control-label">
                            <input class="form-control" type="text" asp-for="RealName" required="required">
                            <span asp-validation-for="RealName" class="text-danger"></span>
                        </div>
                        <div class="col-sm-2">
                            <code>
                                *必填
                            </code>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-1 control-label">手机号</label>
                        <div class="col-sm-4">
                            <input class="form-control" type="text" asp-for="Phone" required="required">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="col-sm-2">
                            <code>
                                *必填，不允许重复
                            </code>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-1 control-label">邮箱</label>
                        <div class="col-sm-4">
                            <input class="form-control" type="text" asp-for="Email" required="required">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-sm-2">
                            <code>
                                *必填，不允许重复
                            </code>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-1 control-label">备注</label>
                        <div class="col-sm-4">
                            <textarea class="form-control" asp-for="Note" rows="5"></textarea>
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <input type="submit" class="btn btn-primary" value="保存" />
                </div>
            </div>
        </form>
    </div>
</div>
